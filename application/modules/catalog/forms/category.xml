<category>
	<action>/category/edit</action>
	<method>POST</method>
	<name>category</name>
	<elements>
		<name>
			<type>text</type>
			<options>
				<label>Title</label>
				<required>true</required>
			</options>
		</name>
		<image>
			<type>file</type>
			<options>
				<label>Image</label>
			</options>
		</image>
		<parent_id>
			<type>text</type>
		</parent_id>
		<description>
			<type>textarea</type>
			<options>
				<label>Description</label>
			</options>
		</description>
		<order>
			<type>text</type>
			<options>
				<label>Order</label>
			</options>
		</order>
		<submit>
			<type>submit</type>
			<options>
				<label>Save</label>
			</options>
		</submit>
	</elements>
</category>