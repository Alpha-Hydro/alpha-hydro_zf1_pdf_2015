<login>
    <method>POST</method>
    <name>login</name>
    <elements>
        <username>
            <type>text</type>
            <options>
                <label>Username</label>
                <required>true</required>
            </options>
        </username>
        <password>
            <type>password</type>
            <options>
                <label>Password</label>
                <required>true</required>
            </options>
        </password>
        <submit>
            <type>submit</type>
            <options>
                <label>Login</label>
            </options>
        </submit>
    </elements>
</login>